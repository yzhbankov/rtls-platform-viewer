{
     "compilerOptions": {
       "baseUrl": "./",
       "target": "es6",
       "module": "esnext",
       "lib": ["es2017", "dom"],
       "moduleResolution": "node",
       "declaration": false,
       "noImplicitAny": false,
       "sourceMap": true,
       "strictNullChecks": false,
       "jsx": "react",
       "suppressImplicitAnyIndexErrors": true,
       "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
       "importHelpers": true
     },
     "files": ["src/index.tsx"],
     "include": ["./src/**/*"],
     "exclude": [
       "node_modules"
     ],
     "awesomeTypescriptLoaderOptions": {
       "useCache": true,
       "forceIsolatedModules": true,
       "silent": true
     }
   }
